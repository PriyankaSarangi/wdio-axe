{
    "env": {
      "es6": true
    },
    "globals": {
      "browser": true
    },
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false}],
      "one-var-declaration-per-line": ["error", "initializations"],
      "no-console": 2,
      "quotes": ["error", "single"],
      "no-var": 2,
      "no-inner-declarations": 2,
      "no-duplicate-case": 2,
      "no-unreachable": 2,
      "no-redeclare": 2,
      "no-useless-return": 2,
      "global-require": 2,
      "indent": ["error", 4],
      "semi": ["error", "always"],
      "space-before-blocks": "error",
      "comma-spacing": ["error", { "before": false, "after": true }]
    }
  }